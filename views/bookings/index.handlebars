{{#each bookings}}
<div class="card card-body mb-2">
  <p><strong>Vendor: {{vendor}}</strong></p>
  <p>Address: {{address}}</p>
  <p>Date: {{bookingdate}}</p>
  <p>Time: {{start}} - {{end}}</p>
  <form method="post" action="/bookings/{{_id}}?_method=DELETE">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-danger  btn-sm" value="Delete">
  </form>
</div>
{{else}}
<p>No bookings listed - <a href="/bookings/add">Add booking</a></p>
{{/each}}