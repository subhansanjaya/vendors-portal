{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<div class="card card-body">
    <h3>Book a vendor</h3>
    <form action="/bookings" method="post">

        <div class="form-group">
            <label for="exampleFormControlSelect1">Square Feet</label>
            <select class="form-control" id="squarefeets" name="squarefeets" required>
                <option value="500-1000">500 - 1000</option>
                <option value="1000-2000">1000 - 2000</option>
            </select>
        </div>

        <div class="form-group">
            <label for="exampleFormControlSelect1">Services</label>
            <select class="form-control" id="services" name="services" required>
                <option value="Landscaping">Landscaping</option>
                <option value="root-balling">Root Balling </option>
                <option value="lawn-mowering">Lawn Mowering</option>
            </select>
        </div>

        <div class="form-group">
            <label for="title">Address</label>
            <input type="text" class="form-control" placeholder="Enter your address" id="address" name="address"
                required />
        </div>

        <div class="form-group">
            <label for="title">Date</label>
            <input type="text" class="form-control" id="datepicker" name="datepicker" required>
        </div>

        <div class="form-group">
            <div id='calendar'></div>

        </div>

        <input type="hidden" id="start" name="start" value="">
        <input type="hidden" id="end" name="end" value="">
        <input type="hidden" id="vendor" name="vendor" value="">

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>